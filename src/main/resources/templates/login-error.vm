#parse("include/header.vm")
<body class="body-login">
<div class="container login-wrapper d-flex flex-column align-items-center justify-content-center">
    <h1 class="color-primary mt-5 mb-5">Schulverwaltung Login</h1>
    <div class="login-form-wrapper d-flex flex-column align-items-center ">
        <a href="https://www.bs1-bt.de/" title="Zur Homepage der Berufsschule 1 Bayreuth">
            <img class="img-logo" src="/assets/logo.png" alt="Logo der Berufsschule 1 Bayreuth">
        </a>
        <hr>
        <p class="form-error">Die von Ihnen eingegebenen Daten waren nicht korrekt!</p>
        <form class="login-form d-flex flex-column align-items-center" method="POST">
            <div class="mb-3  w-100">
                <label for="username" class="form-label">Benutzername</label>
                <input type="text" class="form-control" maxlength="50" id="username" name="username">
            </div>
            <div class="mb-3 w-100">
                <label for="password" class="form-label">Passwort</label>
                <input type="password" class="form-control" maxlength="255" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-outline-primary d-block w-100 mt-3">Login</button>
        </form>
    </div>
    <a href="https://www.bs1-bt.de/" title="Zur Homepage der Berufsschule 1 Bayreuth" class="mt-5">Zurück zur Homepage</a>
    <p class="text-center mt-5" style="max-width: 576px">Dieses Projekt wurde von den Berufsschülern Nico Hammon, Toan Bui, Fabian Schmidt, Christian Zahn umgesetzt. (Abschlussklasse IFA12a, 2023)</p>
</div>
#parse("include/footer.vm")